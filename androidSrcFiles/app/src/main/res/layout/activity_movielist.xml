<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".ui.movielist.MovieListActivity">

    <ListView
            android:id="@+id/list"
            android:layout_width="406dp"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="-20dp"
            app:layout_constraintBottom_toTopOf="@+id/front" app:layout_constraintTop_toTopOf="parent">
    </ListView>
    <Button
            android:id="@+id/back"
            android:text="Back"
            android:layout_width="105dp"
            android:layout_height="53dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"/>
    <Button
            android:id="@+id/front"
            android:text="Front"
            android:layout_width="105dp"
            android:layout_height="54dp"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pageNum"
            app:layout_constraintStart_toEndOf="@+id/back" app:layout_constraintEnd_toStartOf="@+id/front"
            app:layout_constraintHorizontal_bias="0.493" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>